        <artifactId>geronimo-j2ee_1.4_spec</artifactId>
        <version>${geronimoSpecsVersion}</version>
      </dependency>                        
      <dependency>
        <groupId>org.apache.geronimo.specs</groupId>
        <artifactId>geronimo-j2ee-connector_1.5_spec</artifactId>
        <version>${geronimoSpecsVersion}</version>
      </dependency>                        
      <dependency>
