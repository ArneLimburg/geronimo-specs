      </dependency>
      <dependency>
        <groupId>org.apache.geronimo.specs</groupId>
        <artifactId>geronimo-javamail_1.3.1_spec</artifactId>
        <version>${geronimoSpecsVersion}</version>
      </dependency>                                                
      <dependency>
